<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="visible">


    <com.andremion.counterfab.CounterFab
        android:id="@+id/fabHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_input_add"
        app:fabSize="normal" />
    <com.lukedeighton.wheelview.WheelView
        android:visibility="gone"
        android:id="@+id/wheelview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectionAngle="0"
        app:wheelPosition="left"
        app:wheelOffsetX="10dp"
        app:repeatItems="true"
        app:wheelRadius="150dp"
        app:wheelItemCount="14"
        app:wheelPadding="0dp"
        app:wheelItemRadius="20dp"/>
    <com.lukedeighton.wheelview.WheelView
        android:visibility="gone"
        android:id="@+id/wheelview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectionAngle="0"
        app:wheelPosition="right"
        app:wheelOffsetX="10dp"
        app:repeatItems="true"
        app:wheelRadius="150dp"
        app:wheelItemCount="14"
        app:wheelPadding="0dp"
        app:wheelItemRadius="20dp"/>

</RelativeLayout>